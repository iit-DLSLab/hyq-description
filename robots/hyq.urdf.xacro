	</xacro:kinect_camera-->

	<!-- Bumblebee -->
	<xacro:bumblebee_97
		parent_link="ptu_mount_link"
		xyz="0 0 0.018"
		rpy="0 0 0"
		ns="bumblebee"
		frame_prefix="bumblebee_"
		high_res="false"/>

